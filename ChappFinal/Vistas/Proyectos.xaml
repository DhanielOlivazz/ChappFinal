<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChappFinal.Vistas.Proyectos"
             Title="Proyectos">
    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Chats}" BackgroundColor="White">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10" BackgroundColor="White" Margin="0,0,0,0">
                        <Frame HeightRequest="50" WidthRequest="50" CornerRadius="25" IsClippedToBounds="True" BackgroundColor="White">
                            <Image Source="{Binding Avatar}" Aspect="AspectFill" HeightRequest="50" WidthRequest="50"/>
                        </Frame>
                        <StackLayout Orientation="Vertical" Padding="10,0">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding LastMessage}" FontSize="Small" />
                        </StackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
        